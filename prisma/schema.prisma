generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id                    String                 @id @default(cuid())
  fname                 String
  lname                  String
  email                 String?                @unique
  image                 String? 
  password              String?
  role                  UserRole               @default(User)
  gender                Gender
  age                   Int
 createdAt DateTime  @default(now())
 updatedAt DateTime  @updatedAt
}

enum UserRole {
  Admin
  User
  Organizer
}